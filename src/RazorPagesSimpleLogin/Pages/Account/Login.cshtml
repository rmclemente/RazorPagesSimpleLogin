@page
@model RazorPagesSimpleLogin.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Home page";
}
<div>
    @Model.Message
</div>
<form method="post">
    <div class="form-group">
        <label asp-for="Login.Email" class="col-form-label col-md-2"></label>
        <div class="col-md-10">
            <input asp-for="Login.Email" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Login.Password" class="col-form-label col-md-2"></label>
        <div class="col-md-10">
            <input type="password" asp-for="Login.Password" />
        </div>
    </div>
    <div class="form-group">
        <button class="btn btn-outline-primary btn-sm">Log in</button>
    </div>
</form>