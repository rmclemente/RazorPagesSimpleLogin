@page
@model RazorPagesSimpleLogin.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Home page";
}
<vc:summary></vc:summary>
<form method="post">
    <div class="form-group">
        <label asp-for="Email" class="col-form-label col-md-2"></label>
        <div class="col-md-10">
            <input asp-for="Email" />
        </div>
        <span asp-validation-for="Email" class="col-md-10 text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Password" class="col-form-label col-md-2"></label>
        <div class="col-md-10">
            <input type="password" asp-for="Password" />
        </div>
        <span asp-validation-for="Password" class="col-md-10 text-danger"></span>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            <button class="btn btn-outline-primary btn-sm">Log in</button>
        </div>
    </div>
</form>
@section scripts{
    <partial name="_ValidationScriptsPartial" />
}